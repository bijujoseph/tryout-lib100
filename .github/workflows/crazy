name: Crazy

on:
  issues:
    types: [created]

jobs:

  slashdeploy:
    name: Slash Deployer
    runs-on: ubuntu-latest
    steps:

      - name: Debug Action
        uses: hmarr/debug-action@v1.0.0

      - name: Deploy
        if: github.event.label.name == 'deploy'
        run echo HelloDeploy
